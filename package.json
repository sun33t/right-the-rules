{
  "name": "right-the-rules",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier:check": "prettier -c . --ignore-path .gitignore",
    "prettier:write": "prettier -w . --ignore-path .gitignore",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.14",
    "class-variance-authority": "^0.5.1",
    "clsx": "^1.2.1",
    "eslint": "8.38.0",
    "eslint-config-next": "13.3.0",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "lucide-react": "^0.137.0",
    "next": "13.3.0",
    "postcss": "8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "3.3.1",
    "tailwindcss-animate": "^1.0.5",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.5.0",
    "commitizen": "^4.3.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "helpUrl": "This repo follows conventional-commit syntax https://www.conventionalcommits.org/en/v1.0.0/ . Please either format your commit messages to match or run `yarn commit` to access a cli which will step you through constructing a compliant commit message."
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:tailwindcss/recommended",
      "prettier"
    ],
    "rules": {
      "react/jsx-no-target-blank": "error"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
  }
}
